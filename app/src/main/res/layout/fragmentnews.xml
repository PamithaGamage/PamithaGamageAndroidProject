<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/studentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Name: Pamitha Gamage
                      DOB: 10/12/2002
                      Course: Bachelor of IT
                      Department: Sceince &amp; Engineering"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDynamicMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hii Pamitha Gamage!, Welcome to MyVU"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/studentDetails"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.362"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:backgroundTint="#9E3BC0D1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/heading"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:text="Recommended Courses"
                android:textColor="@color/darkBlue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subject1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="220dp"
                android:background="@drawable/custom_edittext2"
                android:text="Python programing short course"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subject2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/custom_edittext2"
                android:text="Cyber security essentials"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subject3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/custom_edittext2"
                android:text="HTML &amp; CSS short course"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subject4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="220dp"
                android:background="@drawable/custom_edittext2"
                android:text="Introduction to AI"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>