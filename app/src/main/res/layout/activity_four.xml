<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#996DBBC5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782">>

        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Python Programing"
            android:textAlignment="center"
            android:textColor="#081663"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="52dp"
            android:text="Course overview"
            android:textColor="#05060B"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:text="This unit will cover python programing and the core conepts of python"
            android:textColor="#D705060B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/name4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="160dp"
            android:text="Learning outcomes"
            android:textColor="#05060B"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name5"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:text="1. Using python to build machine learning modules"
            android:textColor="#D705060B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/name6"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="265dp"
            android:text="2. Use python concepts to design real-world mobile apps"
            android:textColor="#D705060B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/name7"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="330dp"
            android:text="Prerequisites"
            android:textColor="#05060B"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name8"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="370dp"
            android:text="NA"
            android:textColor="#D705060B"
            android:textSize="20dp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>